layout {
    tab name="editor" {
        pane {
            focus true
            borderless true
            command "nvim"
        }
        pane size=1 borderless=true {
            plugin location="zellij:compact-bar"
        }
    }
    tab name="terminal" {
        pane
        pane size=1 borderless=true {
            plugin location="zellij:compact-bar"
        }
    }
}
